<odoo>
  <data>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="bengkel_perbaikan_list">
      <field name="name">bengkel.perbaikan.list</field>
      <field name="model">bengkel.perbaikan</field>
      <field name="arch" type="xml">
        <list>
          <field name="name"/>
          <field name="deskripsi"/>
          <field name="biaya"/>
          <field name="status"/>
        </list>
      </field>
    </record>

    <!-- form view definition -->
    <record model="ir.ui.view" id="bengkel_perbaikan_form">
      <field name="name">bengkel.perbaikan.form</field>
      <field name="model">bengkel.perbaikan</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <field name="name"/>
              <field name="deskripsi"/>
              <field name="biaya"/>
              <field name="status"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="action_bengkel_perbaikan">
      <field name="name">Perbaikan Bengkel</field>
      <field name="res_model">bengkel.perbaikan</field>
      <field name="view_mode">list,form</field>
    </record>

    <!-- Top menu item -->
    <menuitem name="Bengkel" id="bengkel_menu_root"/>

    <!-- menu categories -->
    <menuitem name="Manajemen" id="bengkel_menu_manajemen" parent="bengkel_menu_root"/>

    <!-- actions -->
    <menuitem name="Perbaikan" id="bengkel_menu_perbaikan" parent="bengkel_menu_manajemen" action="action_bengkel_perbaikan"/>
  </data>
</odoo>